---
// src/components/StickyNav.astro
interface Props {
  socialDatas: {
    linkedin?: string;
    github?: string;
    cv?: string;
    name?: string;
  };
}

const { socialDatas } = Astro.props;
const glassStyle = "bg-gray-900/60 backdrop-blur-md border-white/10 ";
---

<nav 
  id="sticky-top-bar"
  class={`border-b-[2px] fixed top-0 inset-x-0 z-50 h-16 transition-all duration-500 ease-in-out border-b${glassStyle} shadow-2xl shadow-orange-900/50 flex items-center justify-between px-4 md:px-8`}
>
  <div 
    id="top-bar-branding"
    class="group flex items-center gap-2 sm:gap-3 cursor-pointer transition-all duration-500 min-w-0" 
    onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
  >
    <div 
      id="top-bar-circle" 
      class="shrink-0 w-8 h-8 sm:w-10 sm:h-10 rounded-full border-8 p-1 border-white/20 border-t-orange-900/80 border-r-orange-500/40 transition-all duration-500 group-hover:border-white/80 group-hover:border-t-orange-800 group-hover:border-r-orange-400/80" 
    ></div>

    <span class="font-bold text-white text-xs sm:text-lg block transition-all duration-500 group-hover:text-shadow-md group-hover:text-shadow-orange-400 truncate">
      {socialDatas.name}  
    </span>
  </div>

  <div id="top-bar-socials" class="flex items-center gap-4 transition-all duration-500">
    {socialDatas.linkedin && (
      <a aria-label="LinkedIn" href={socialDatas.linkedin} target="_blank" class="text-gray-400 rounded-lg hover:scale-110 hover:shadow-xl hover:shadow-blue-500/20 transition-all">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
      </a>
    )}
    {socialDatas.github && (
      <a aria-label="GitHub" href={socialDatas.github} target="_blank" class="text-gray-400 rounded-full hover:scale-110 hover:shadow-xl hover:shadow-blue-500/20 transition-all">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
      </a>
    )}
    {socialDatas.cv && (
      <a aria-label="Descargar CV" href={socialDatas.cv} target="_blank" download class="flex items-center gap-1 text-sm font-semibold bg-white/10 px-3 py-1 rounded-full border border-white/20 hover:bg-purple-500/20 hover:shadow-xl hover:scale-105 hover:shadow-purple-500/20 transition-all">
        <span>CV</span>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
      </a>
    )}
  </div>
</nav>

<script>
  function initStickyNav() {
    const profileSection = document.getElementById('profile-trigger');
    const topBar = document.getElementById('sticky-top-bar');
    const socials = document.getElementById('top-bar-socials');
    const topBarCircle = document.getElementById('top-bar-circle');

    if (!topBar) return;

    const topObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Estado cuando el perfil es visible (Barra sutil)
          topBar.classList.replace('h-16', 'h-12');
          topBar.classList.add('bg-black/10');
          if (topBarCircle) topBarCircle.classList.add('scale-75'); 
          if (socials) socials.classList.add('opacity-0', 'pointer-events-none');
        } else {
          // Estado cuando se hace scroll (Barra prominente)
          topBar.classList.replace('h-12', 'h-16');
          topBar.classList.remove('bg-black/10');
          if (topBarCircle) topBarCircle.classList.remove('scale-75');
          if (socials) socials.classList.remove('opacity-0', 'pointer-events-none');
        }
      });
    }, { threshold: 0.5 });

    if (profileSection) topObserver.observe(profileSection);
  }

  document.addEventListener('DOMContentLoaded', initStickyNav);
  document.addEventListener('astro:page-load', initStickyNav);
</script>