---
const {
  label = "Click aquí",
  className = "",
  href = "", 
  theme = "sunset",
}: {
  label?: string;
  className?: string;
  href?: string;
  theme?: "sunset" | "cosmic" | "void"; 
} = Astro.props;

const hasBg = /\bbg-[^\s]+/.test(className);

const base = // Estilo base
  "text-sm px-7 py-2 mx-1 md:text-base md:px-10 md:py-2 lg:px-15 lg:py-3 text-white rounded-lg font-semibold transition focus:outline-none shadow-lg hover:cursor-pointer inline-flex items-center justify-center";

const themes: Record<"sunset" | "cosmic" | "void", string> = {
  // Degradado SUNSET (Naranja a Rosa)
  sunset: "bg-gradient-to-tr from-orange-500 to-pink-800 hover:from-orange-500 hover:to-pink-600",
  
  // Degradado COSMIC (Púrpura a Índigo)
  cosmic: "bg-gradient-to-br from-purple-700 to-pink-800 hover:from-purple-700 hover:to-pink-600",
  
  // Transparente con borde blanco)
  void: "md:px-8 md:py-2 lg:px-12 lg:py-2.5 bg-gradient-to-br border-2 border-white/10 bg-transparent hover:from-transparent hover:to-indigo-950",
};

const defaultStyle = themes[theme];

const style = `${base} ${hasBg ? className : `${defaultStyle}${className ? ` ${className}` : ""}`}`.trim();
---

<a href={href} class={style} role="button">
  {label}
  <slot />
</a>